# Default install dir
INSTDIR=~/.sugard

# Default paths
ADIR=~/.sugard/aliases
CDIR=~/.sugard/conds
FDIR=~/.sugard/funcs

# Default configs
ACONF=$ADIR/alias.conf
CCONF=$CDIR/cond.conf
FCONF=$FDIR/func.conf

# Default sourcable file extensions
AEXT=alias
CEXT=cond
FEXT=func

# Default bootstrap files
CDEF=$CDIR/.default
FDEF=$FDIR/.default

# Default residual removal
FREM=$FDIR/.teardown

# Mode of operation. Valid selections are "alias" or "cond"
MODE="alias"

# Enter a non-zero string to enable logging to stdout
LOG=true

# Sugar bootstrap
. $FDEF
. $CDEF
. $FREM

